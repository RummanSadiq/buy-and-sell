<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Shop</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Shop</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->

   <!-- Start Shop Page  -->
<div class="shop-box-inner">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <div class="product-categorie-box">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                              <div class="mx-auto d-block">
                              <%= form_for(:search,url: products_path,method: :get) do |form|%>
                                <div class="field w-50 d-inline-block">
                                  <%= form.label :Search %>
                                  <%= form.text_field :query %>
                                </div>
                                <div class="actions d-inline-block">
                                  <%= form.submit 'search',class: 'btn btn-danger', style: 'padding-bottom: 13px;padding-top: 13px;' %>
                                </div>
                              <% end %>
                            </div>
                                <div class="row">
                                  <% @products.each do |product| %>
                                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                        <div class="products-single fix">
                                            <div class="box-img-hover">
                                                <div class="type-lb">
                                                    <p class="sale">Sale</p>
                                                </div>
                                                <%= product.quantity == 0 ? image_tag('outofstock',class: 'img-fluid') : image_tag(product.images[0], class: 'img-fluid' ) %>
                                                <div class="mask-icon">
                                                    <%= link_to 'Details', product_path(product),class: 'cart'%>
                                                </div>
                                            </div>
                                            <div class="why-text">
                                                <h4><%= product.title %></h4>
                                                <h5> $<%= product.price %></h5>
                                                <h5> Stock:<%= product.quantity %></h5>
                                                <h5> Reviews:<%= product.comments.count %></h5>
                                                <h5> <%= product.category %></h5>
                                            </div>
                                        </div>
                                    </div>
                                  <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- End Shop Page -->


