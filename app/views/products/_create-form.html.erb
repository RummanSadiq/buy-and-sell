<%= form_for(:cart, url: carts_path,remote:true) do |form| %>
  <div class="field">
    <%= form.label :Quantity %>
    <%= form.number_field :quantity, max:@product.quantity, min:1,value:1,class: 'form-control w-100' %>
  </div>
  <%= form.hidden_field :product_id, value: @product.id %>
  <div class="cart-and-bay-btn">
    <%= form.submit "Add to cart" , class: 'btn hvr-hover add-to-cart-btn mt-3 w-100'%>
  </div>
<% end %>
