<div class="container">
  <div class="row">
    <div class="col-12">
      <% if current_user.image.present? %>
        <%= image_tag(current_user.image , class: 'rounded-circle border p-1 w-25 mx-auto d-block')%>
      <% else %>
        <%= image_tag 'commentor' , class: 'rounded-circle border p-1 w-25 mx-auto d-block'%>
      <% end %>
      <h1 class="text-center text-capitalize mt-2 font-weight-bold"><%= current_user.firstName%>  <%= current_user.lastName%></h1>
    </div>
  </div>
  <div class="row ">
      <div class="col-5">
      </div>
      <div class="col-1">
        <%= link_to "Edit Profile", edit_user_registration_path,class: "btn btn-success" %>

      </div>
      <div class="col-1">

        <%= link_to "New Product", new_product_path ,class: "btn btn-success" %>
      </div>
      <div class="col-5">
      </div>
    </div>
  <div class="mt-5">
    <h2>Your Products</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Stock</th>
          <th>Price</th>
          <th>Edit</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr class="<%= 'table-danger' if product.quantity == 0%>">
            <td><%= product.title %></td>
            <td><%= product.category %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Remove', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


