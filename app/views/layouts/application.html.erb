<!DOCTYPE html>
<html>
  <head>
    <title>Buyandsell</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user.present? %>
      <%= current_user.email %>
      <%= link_to 'signout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }%>
      <h4 id="cart-count"><%= link_to "Cart(#{current_user.cart['products'].length if current_user.cart.present?})", carts_path %></h4>

    <% end %>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
