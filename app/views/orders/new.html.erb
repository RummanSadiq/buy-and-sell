<h1>Order Details</h1>
<%= render 'product' %>
<h3 >total($): <span id="total"><%= @cart['total'] %> </span></h3>
<p id="coupon-err"></p>
<%= form_for(:discount, url: coupon_path ,remote:true) do |form| %>
	<div class="field">
      <%= form.label :Coupon %>
      <%= form.text_field :coupon %>
    </div>

    <div class="actions">
   		 <%= form.submit 'apply coupon' %>
 	 </div>
<% end %>

<%= form_for(:order, url: orders_path,:html => {:id => "payment-form"}) do |form| %>

    <div class="field" id="card-element">
      <%= form.label 'Credit or debit card' %>
    </div>

    <div id="card-errors" role="alert"></div>

    <div class="actions">
      <%= form.submit "Pay Now"%>
    </div>
<% end %>

